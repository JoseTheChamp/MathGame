<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonAddition"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="60dp"
        android:text="@string/op_addition" />

    <TextView
        android:id="@+id/textViewAdditionHigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/ma_highscore"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonSubtraction"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:text="@string/op_Subtraction" />

    <TextView
        android:id="@+id/textViewSubtractionHigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/ma_highscore"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonMultiplication"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:text="@string/op_Multiplication"/>

    <TextView
        android:id="@+id/textViewMultiplicationHigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/ma_highscore"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:text="@string/op_division" />

    <TextView
        android:id="@+id/textViewDivisionHigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/ma_highscore"
        android:textColor="#000000"
        android:textSize="16sp" />
</LinearLayout>